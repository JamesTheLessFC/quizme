doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title QuizMe: #{title}
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
    link(rel='stylesheet' href='/stylesheets/style.css')
  body
    nav.navbar.navbar-expand-md.navbar-light.bg-warning.sticky-top
      a.navbar-brand(href="/content") QuizMe
      button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation")
        span.navbar-toggler-icon
      div.collapse.navbar-collapse(id="navbarNavDropdown")
        ul.navbar-nav.mr-auto
          li.nav-item(class=(current_page==="Home" ? "active" : ""))
            a.nav-link(href="/content") Home
              span.sr-only (current)
          li.nav-item
            a#navbarDropdownMenuLink.nav-link.dropdown-toggle(href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class=(current_page==="Categories" ? "active" : "")) Quiz Categories
            div.dropdown-menu(aria-labelledby="navbarDropdownMenuLink")
              a.dropdown-item(href="/content/category/Animals") Animals
              a.dropdown-item(href="/content/category/Art") Art
              a.dropdown-item(href="/content/category/Dating") Dating
              a.dropdown-item(href="/content/category/Fun") Fun
              a.dropdown-item(href="/content/category/Geography") Geography
              a.dropdown-item(href="/content/category/History") History
              a.dropdown-item(href="/content/category/Language") Language
              a.dropdown-item(href="/content/category/Literature") Literature
              a.dropdown-item(href="/content/category/Movies") Movies
              a.dropdown-item(href="/content/category/Music") Music
              a.dropdown-item(href="/content/category/Other") Other
              a.dropdown-item(href="/content/category/Religion") Religion
              a.dropdown-item(href="/content/category/Science") Science
              a.dropdown-item(href="/content/category/Sports") Sports
              a.dropdown-item(href="/content/category/Technology") Technology
          li.nav-item
            a.nav-link(href="/content/quiz/create" class=(current_page==="Create Quiz" ? "active" : "")) Create Quiz
        form.form-inline.my-2.my-md-0
          input#search-quiz-input.form-control.mr-sm-2(type="search" placeholder="Search Quiz By Name" aria-label="Search Quiz By Name")
          a#search-quiz-button.btn.btn-outline-dark.my-2.my-sm-0(role="button" href="#") Search
    
    block content

    div.container
      hr
      br
      footer.text-center &copy; QuizMe, 2020
      br

    script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous")
    script(src="/javascripts/quiz.js")
